<duke>
  <schema>
    <threshold>0.9</threshold>

    <property type="id">
      <name>ID</name>
    </property>

    <property>
      <name>NAME</name>
      <comparator>no.priv.garshol.duke.comparators.JaccardIndexComparator</comparator>
      <low>0.1</low>
      <high>0.9</high>
    </property>
    <property>
      <name>COUNTRY</name>
      <comparator>no.priv.garshol.duke.comparators.ExactComparator</comparator>
      <low>0.1</low>
      <high>0.8</high>
    </property>    
    <property>
      <name>LOCALITY</name>
      <comparator>no.priv.garshol.duke.comparators.JaccardIndexComparator</comparator>
      <low>0.1</low>
      <high>0.88</high>
    </property>    
    <property>
      <name>STREET</name>
      <comparator>no.priv.garshol.duke.comparators.JaccardIndexComparator</comparator>
      <low>0.1</low>
      <high>0.9</high>
    </property>    
  </schema>  

  <database class="no.priv.garshol.duke.databases.LuceneDatabase">
    <!-- must turn off fuzzy search, or it will take forever -->
    <param name="fuzzy-search" value="false"/>
  </database>
  
  <csv>
    <param name="input-file" value=""/>

    <column name="agent"
            property="ID"/>
    <column name="agentName"
            cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"
            property="NAME"/>
    <column name="addressCountryUri"
            property="COUNTRY"/>
    <column name="addressLocality"
            cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"
            property="LOCALITY"/>
    <column name="streetAddress"
            cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"
            property="STREET"/>
  </csv>  
</duke>

